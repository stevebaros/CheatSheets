# Install Git
sudo apt-get install git

# Create clone from repo
git clone <url>

# Add (no need when using the '-a' flag in commit)
git add <filename>

# Commit
git commit -a -m '<msg>'
git push

# Update
git pull

# Hard Update
git reset --hard

# Save Cretentials
git config --global credential.helper cache
git config credential.helper 'cache --timeout=1209600'
git config --global user.name "<username>"
git config --global user.email you@example.com

